{
  "name": "if-branch-merged-action",
  "version": "0.1.0",
  "private": false,
  "description": "A GitHub action to check if a pull request head branch has been merged to another branch",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint-fix": "eslint src/**/*.ts",
    "lint": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "merge",
    "branch",
    "pr"
  ],
  "author": "Gavin.Guohao.Wu",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "@octokit/webhooks-types": "^4.1.0",
    "execa": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^16.0.1",
    "@typescript-eslint/parser": "^4.8.1",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.2",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^26.6.3",
    "jest-circus": "^27.0.6",
    "js-yaml": "^4.1.0",
    "prettier": "2.3.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.5"
  }
}
